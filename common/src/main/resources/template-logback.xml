<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log_path}/logback.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logback.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <append>true</append>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} %X{task} - %msg%n</Pattern>
        </layout>
    </appender>

	<appender name="UI" class="org.fuin.devsupwiz.common.TextFlowAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
		    <level>INFO</level>
		</filter>
    	<encoder>
			<Pattern>[%X{task}] %msg%n</Pattern>
		</encoder>
	</appender>
    
    <root level="INFO">
        <appender-ref ref="FILE" />
    </root>

    <logger name="org.fuin.devsupwiz.tasks" additivity="false">
        <appender-ref ref="UI" />
    </logger>
    
</configuration>
